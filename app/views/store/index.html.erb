<script type="text/javascript">
//alert("<%=form_authenticity_token%>");

var top_menu = $('.side-menu .megamenu-horizontal > ul').menuAim({
	triggerEvent:       'click',  //hover
	activateCallback:   activate,
	deactivateCallback: deactivate,
	submenuDirection:   'right',
	openClassName:      'open',
	activationDelay:    200
});

function activate(row) {
  var _row = $(row),
      _submenu = _row.children('ul');

	_row.children('a').addClass('hover');
	_submenu.css('display', 'block');
}

function deactivate(row) {
  var _row = $(row),
		_submenu = _row.children('ul');

	_row.find('a').removeClass('hover');
	_submenu.css('display', 'none');
}

</script>

